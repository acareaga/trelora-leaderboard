<h1>Recent Ratings</h1>
<br>
<br>
<div class="ui centered grid">
  <table class="ui very basic collapsing celled table">
    <tbody>
      <% @ratings.values.each do |rating| %>
        <%rating.first(5).each do |key, value| %>
          <tr>
            <td>
              <div class="content">
                <h3><%= key[:person_id] %></h3>
                <div class="sub header">Customer
              </div>
            </td>
            <td>
              <div class="content">
                <h3><%= key[:code]%></h3>
              </div>
            </td>
            <td>
              <div class="content">
                <h3>"<%=key[:comments]%>"</h3>
              </div>
            </td>
            <td>
              <div class="ui statistic">
                <div class="value">
                  <%=key[:stars]%>
                </div>
                <div class="label">
                  Rating
                </div>
              </div>
            </td>
            <td>
              <div class="content">
                  <%=key[:member_ids] %>
              </div>
            </td>
          </tr>
        <%end %>
      <%end %>
    </tbody>
    <br>
  </table>
</div>
